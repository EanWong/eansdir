#globalDirectory
  h2 Global Directory
  #formattedGlobal
  script#globalDirectoryTableTemplate(type='text/template')
    table#globalDirectoryTable
      thead
        tr
          td
            |Full Name
          td
            |Email
          td
            |CellPhone
          td
            |Current Address
          td
            |Next Address Change
          td
            |Added?
      tbody
        |{{#directory}}  
        tr 
          td
            |{{Name}}
          td
            |{{Email}}
          td
            |{{CellPhone}}
          td
            |{{CurrentAddress}}
          td
            |{{UpdateAddressDate}}
          td
            |{{#inList}}
            button(type='button' id='{{_id}}' class='btnRemoveContact') Remove Contact
            |{{/inList}}
            |{{^inList}}
            button(type='button' id='{{_id}}' class='btnAddContact') Add Contact
            |{{/inList}}
        |{{/directory}}
  //List of all people in my contacts